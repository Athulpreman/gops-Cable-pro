<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"

    android:orientation="vertical"
    android:gravity="center"

    xmlns:android="http://schemas.android.com/apk/res/android" >

    <Button
        android:layout_width="wrap_content"
        android:layout_height="188dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/k1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="COMPLAINT STATUS"
        android:textSize="28dp"
        android:layout_marginTop="25dp"
        android:textColor="#1E88E5">

    </TextView>

    <TableLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="35dp"
        android:stretchColumns="1"
        xmlns:android="http://schemas.android.com/apk/res/android" >
        <TableRow>
            <TextView
                android:text="COMPLAINT ID:"
                android:textSize="20dp"
                android:layout_marginRight="10dp"
                android:textColor="#000"/>
            <EditText
                android:id="@+id/id1"
                android:textColor="#070808"
                android:textSize="20dp"
                android:inputType="textPersonName"
                android:layout_height="50dp"/>
        </TableRow>

        <TableRow>
            <TextView
                android:text="TYPE"
                android:textSize="20dp"
                android:layout_marginRight="5dp"
                android:textColor="#0A0B0B"/>
            <EditText
                android:id="@+id/id2"
                android:textColor="#070808"
                android:textSize="20dp"
                android:inputType="text"
                android:layout_height="50dp"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="STATUS:"
                android:textSize="20dp"
                android:layout_marginRight="5dp"
                android:textColor="#000"/>
            <EditText
                android:id="@+id/id3"
                android:textColor="#070808"
                android:textSize="20dp"
                android:inputType="phone"
                android:layout_height="50dp"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="REGISTRATION TIME:"
                android:textSize="20dp"
                android:layout_marginRight="10dp"
                android:textColor="#000"/>
            <EditText
                android:id="@+id/id4"
                android:textColor="#070808"
                android:textSize="20dp"
                android:inputType="textEmailAddress"
                android:layout_height="50dp"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="FIXED TIME:"
                android:textSize="20dp"
                android:layout_marginRight="10dp"
                android:textColor="#0E0F0F"/>
            <EditText
                android:id="@+id/id5"
                android:textColor="#070808"
                android:textSize="20dp"
                android:inputType="number"
                android:layout_height="50dp"/>
        </TableRow>
    </TableLayout>
    <Button
        android:id="@+id/bt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:text="SEND"/>
</LinearLayout>


